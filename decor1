from datetime import datetime
import json
from pathlib import Path


def par_decor(way):

    def decor(old_function):
        myfile = Path(f'{way}.py')
        myfile.touch(exist_ok=True)
        with open(f'{way}.py', "r") as file:
            import_spisok = json.load(file)

        def new_function(*args, **kwargs):
            time = datetime.now()
            argm = args, kwargs
            old_name = old_function.__name__
            key = f'{args}{kwargs}'
            if key in import_spisok:
                return import_spisok[key]
            result = old_function(*args, **kwargs)
            import_spisok[key] = f'Дата и время вызова: {time}', f'Имя: {old_name}', f'С аргументами: {argm}', f'И результатом: {result}'
            print(import_spisok[key])
            with open(f'{way}.py', "w") as file:
                json.dump(import_spisok, file)
            return result

        return new_function
    return decor

@par_decor(way='decorars')
def dvadno(numb1, numb2, numb3, numb4, numb5):
    sum = numb1 + numb2 + numb3 + numb4 + numb5
    if sum < 10:
        return("next time")
    elif 10 < sum < 21:
        return("closer")
    elif sum == 21:
        return("You WIN")
    elif 21 < sum < 55:
        return("ice cold")
    elif sum == 101:
        return("not the same game")
    else:
        return("repite")

dvadno(10, 1, 0, 0, 0)
